#, no-c-format
msgid "<primary>ASCII</primary>"
msgstr "<primary>ASCII</primary>"

#. Tag: indexterm
#, no-c-format
msgid "<primary>UTF-8</primary>"
msgstr "<primary>UTF-8</primary>"

#. Tag: indexterm
#, no-c-format
msgid "<primary>Unicode</primary>"
msgstr "<primary>Unicode</primary>"

