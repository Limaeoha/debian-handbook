#, no-c-format
msgid "<primary>PAM</primary>"
msgstr "<primary>PAM</primary>"

#. Tag: indexterm
#, no-c-format
msgid "<primary><filename>pam_env.so</filename></primary>"
msgstr "<primary><filename>pam_env.so</filename></primary>"

#. Tag: title
#, no-c-format
msgid "Configuring the Keyboard"
msgstr "キーボードの設定"

